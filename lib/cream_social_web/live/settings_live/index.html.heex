<div class="max-w-2xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Profile Settings</h1>
      <p class="text-sm text-gray-600 mt-1">Update your profile information and photo</p>
    </div>

    <div class="px-6 py-6">
      <.form for={@profile_form} phx-submit="update_profile" phx-change="validate" multipart class="space-y-6">
        
        <!-- Profile Picture Section -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-4">Profile Picture</label>
          
          <!-- Current Profile Picture -->
          <div class="flex items-center space-x-6">
            <div class="w-24 h-24 rounded-full bg-gray-300 flex items-center justify-center overflow-hidden">
              <%= if @current_user.profile_pic do %>
                <img src={@current_user.profile_pic} alt={@current_user.full_name} class="w-24 h-24 rounded-full object-cover" />
              <% else %>
                <span class="text-gray-600 font-medium text-2xl">
                  <%= String.first(@current_user.full_name) %>
                </span>
              <% end %>
            </div>
            
            <div class="flex-1">
              <label for={@uploads.profile_pic.ref} class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Choose Photo
              </label>
              <.live_file_input upload={@uploads.profile_pic} class="hidden" />
              <p class="text-xs text-gray-500 mt-1">JPG, PNG or GIF. Max size 5MB.</p>
            </div>
          </div>

          <!-- Preview uploaded profile picture -->
          <%= if length(@uploads.profile_pic.entries) > 0 do %>
            <div class="mt-4">
              <%= for entry <- @uploads.profile_pic.entries do %>
                <div class="relative inline-block">
                  <.live_img_preview entry={entry} class="w-24 h-24 rounded-full object-cover" />
                  <button
                    type="button"
                    phx-click="cancel-upload"
                    phx-value-ref={entry.ref}
                    class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 text-white rounded-full flex items-center justify-center text-xs hover:bg-red-600"
                  >
                    ×
                  </button>
                  <!-- Progress bar -->
                  <%= if entry.progress < 100 do %>
                    <div class="absolute bottom-0 left-0 right-0 bg-gray-200 rounded-b-full">
                      <div class="bg-blue-500 h-1 rounded-b-full transition-all" style={"width: #{entry.progress}%"}></div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Upload errors -->
          <%= for err <- upload_errors(@uploads.profile_pic) do %>
            <div class="mt-2 text-sm text-red-600">
              <%= case err do %>
                <% :too_large -> %>File too large (max 5MB)
                <% :not_accepted -> %>Invalid file type (JPG, PNG, GIF only)
                <% _ -> %>Upload error
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Personal Information -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="full_name" class="block text-sm font-medium text-gray-700">Full Name</label>
            <.input
              field={@profile_form[:full_name]}
              type="text"
              class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-gray-700">Company</label>
            <.input
              field={@profile_form[:company]}
              type="text"
              class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
            />
          </div>
        </div>

        <div>
          <label for="website" class="block text-sm font-medium text-gray-700">Website</label>
          <.input
            field={@profile_form[:website]}
            type="url"
            placeholder="https://example.com"
            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          />
        </div>

        <div>
          <label for="bio" class="block text-sm font-medium text-gray-700">Bio</label>
          <.input
            field={@profile_form[:bio]}
            type="textarea"
            rows="4"
            placeholder="Tell us about yourself..."
            class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
          />
          <p class="mt-2 text-sm text-gray-500">A brief description about yourself.</p>
        </div>

        <!-- Contact Information -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Contact Information</h3>
          
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <label for="phone_no" class="block text-sm font-medium text-gray-700">Phone Number</label>
              <.input
                field={@profile_form[:phone_no]}
                type="tel"
                class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
              />
            </div>

            <div>
              <label for="country_code" class="block text-sm font-medium text-gray-700">Country Code</label>
              <.input
                field={@profile_form[:country_code]}
                type="text"
                placeholder="+1"
                class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
              />
            </div>
          </div>
        </div>

        <!-- Custom Subdomain -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Custom URL</h3>
          
          <div>
            <label for="subdomain" class="block text-sm font-medium text-gray-700">Subdomain</label>
            <div class="mt-1 flex rounded-md shadow-sm">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                https://
              </span>
              <.input
                field={@profile_form[:subdomain]}
                type="text"
                placeholder="yourname"
                class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none border-gray-300 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
              />
              <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                .creamsocial.com
              </span>
            </div>
            <p class="mt-2 text-sm text-gray-500">Choose a custom URL for your profile.</p>
          </div>
        </div>

        <!-- AI Settings -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">AI Enhancement Settings</h3>
          <div>
            <label for="openai_api_key" class="block text-sm font-medium text-gray-700">OpenAI API Key</label>
            <.input
              field={@profile_form[:openai_api_key]}
              type="password"
              placeholder="sk-..."
              class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
            />
            <p class="mt-2 text-sm text-gray-500">
              Enter your OpenAI API key to enable AI-powered message enhancement. 
              <a href="https://platform.openai.com/api-keys" target="_blank" class="text-blue-600 hover:text-blue-500">Get your API key here</a>
            </p>
            <div class="mt-2 flex items-center space-x-2">
              <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm text-green-600">Your API key is stored securely and never shared.</span>
            </div>
          </div>
        </div>

        <!-- Save Button -->
        <div class="flex justify-end pt-6 border-t border-gray-200">
          <button
            type="submit"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            Save Changes
          </button>
        </div>
      </.form>
    </div>
  </div>

  <!-- Back to Stream -->
  <div class="mt-6 text-center">
    <.link navigate={~p"/stream"} class="text-sm text-gray-500 hover:text-gray-700">
      ← Back to Stream
    </.link>
  </div>
</div>