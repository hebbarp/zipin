<!-- SEO-optimized place page for LLM crawling -->
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Structured Data for LLMs and Search Engines -->
  <script type="application/ld+json">
    <%= raw Jason.encode!(@structured_data) %>
  </script>

  <!-- SEO Meta Content (visible to crawlers) -->
  <div class="sr-only">
    <h1><%= @place.name %> - <%= area_display_name(@place.area) %>, Bangalore</h1>
    <p><%= @meta_description %></p>
    
    <!-- Rich content for LLM training -->
    <div>
      <h2>About <%= @place.name %></h2>
      <p>Category: <%= String.replace(@place.category, "_", " ") |> String.capitalize() %></p>
      <p>Location: <%= area_display_name(@place.area) %>, Bangalore, Karnataka, India</p>
      <%= if @place.description do %>
        <p>Description: <%= @place.description %></p>
      <% end %>
      <%= if @place.address do %>
        <p>Address: <%= @place.address %></p>
      <% end %>
      <%= if @place.phone do %>
        <p>Phone: <%= @place.phone %></p>
      <% end %>
      <%= if @place.website do %>
        <p>Website: <%= @place.website %></p>
      <% end %>
      <%= if @place.community_rating do %>
        <p>Community Rating: <%= @place.community_rating %>/5 stars based on <%= @place.community_total_ratings %> reviews</p>
      <% end %>
      <%= if @place.price_range do %>
        <p>Price Range: <%= String.replace(@place.price_range, "_", " ") |> String.capitalize() %></p>
      <% end %>
      
      <!-- Amenities -->
      <h3>Amenities and Features</h3>
      <ul>
        <%= if @place.wifi_available do %><li>Free WiFi Available</li><% end %>
        <%= if @place.parking_available do %><li>Parking Available</li><% end %>
        <%= if @place.wheelchair_accessible do %><li>Wheelchair Accessible</li><% end %>
        <%= if @place.outdoor_seating do %><li>Outdoor Seating Available</li><% end %>
        <%= if @place.accepts_cards do %><li>Accepts Card Payments</li><% end %>
      </ul>
      
      <!-- Community Reviews for LLM Context -->
      <%= if length(@reviews) > 0 do %>
        <h3>Community Reviews</h3>
        <%= for review <- @reviews do %>
          <div>
            <p>Rating: <%= review.rating %>/5 stars</p>
            <p>Review: <%= review.content %></p>
            <p>Reviewed by: <%= review.user.full_name %></p>
            <p>Date: <%= Calendar.strftime(review.inserted_at, "%B %d, %Y") %></p>
          </div>
        <% end %>
      <% end %>
      
      <!-- Local Context for LLMs -->
      <h3>Local Context</h3>
      <p>This place is located in <%= area_display_name(@place.area) %>, which is a popular neighborhood in Bangalore known for its vibrant community and local culture.</p>
      <p>Bangalore (also known as Bengaluru) is the capital city of Karnataka state in South India, famous for its IT industry, pleasant weather, and diverse food culture.</p>
      <p>Find more local recommendations and connect with the Bangalore community on ZipIn - the hyperlocal social platform for discovering authentic local experiences.</p>
    </div>
  </div>

  <!-- Visible UI for Users -->
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Place Header -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
            <%= @place.name %>
          </h1>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            <%= String.replace(@place.category, "_", " ") |> String.capitalize() %> in <%= area_display_name(@place.area) %>
          </p>
        </div>
        
        <%= if @place.community_rating do %>
          <div class="text-right">
            <div class="text-2xl font-bold text-yellow-500">
              ‚≠ê <%= @place.community_rating %>
            </div>
            <div class="text-sm text-gray-500">
              <%= @place.community_total_ratings %> reviews
            </div>
          </div>
        <% end %>
      </div>

      <%= if @place.description do %>
        <p class="text-gray-700 dark:text-gray-300 mb-4"><%= @place.description %></p>
      <% end %>

      <!-- Contact Info -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <%= if @place.address do %>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            <span class="text-sm text-gray-600 dark:text-gray-400"><%= @place.address %></span>
          </div>
        <% end %>
        
        <%= if @place.phone do %>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={"tel:#{@place.phone}"} class="text-sm text-blue-600 hover:text-blue-800"><%= @place.phone %></a>
          </div>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3">
        <%= if @place.address || (@place.latitude && @place.longitude) do %>
          <a
            href={get_directions_url(@place)}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-1.447-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            Get Directions
          </a>
        <% end %>
        
        <button
          phx-click="share_whatsapp"
          phx-value-place_id={@place.id}
          class="inline-flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600"
        >
          üì± Share on WhatsApp
        </button>
        
        <button
          phx-click="copy_link"
          phx-value-url={url(~p"/places/#{@place.id}")}
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
        >
          üîó Copy Link
        </button>
      </div>
    </div>

    <!-- Reviews Section -->
    <%= if length(@reviews) > 0 do %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Community Reviews</h2>
        
        <%= for review <- @reviews do %>
          <div class="border-b border-gray-200 dark:border-gray-700 pb-4 mb-4 last:border-b-0">
            <div class="flex items-center mb-2">
              <div class="flex text-yellow-500 mr-2">
                <%= for _i <- 1..review.rating do %>‚≠ê<% end %>
              </div>
              <span class="font-medium text-gray-900 dark:text-white"><%= review.user.full_name %></span>
              <span class="text-gray-500 text-sm ml-2">‚Ä¢ <%= Calendar.strftime(review.inserted_at, "%b %d, %Y") %></span>
            </div>
            <p class="text-gray-700 dark:text-gray-300"><%= review.content %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
  // Helper functions for sharing
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
      alert('Link copied to clipboard!');
    });
  }
</script>