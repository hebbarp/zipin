                  <% end %>
                </div>

                <div class="flex justify-between items-center">
                  <button
                    type="button"
                    phx-click="toggle_reply"
                    phx-value-post_id={post.id}
                    class="text-sm text-gray-500 hover:text-gray-700"
                  >
                    Cancel
                  </button>
                  <button
                    type="submit"
                    phx-disable-with="Replying..."
