                    <div class="mt-2 grid grid-cols-2 gap-2">
                      <%= for entry <- @uploads.reply_media.entries do %>
                        <div class="relative">
                          <%= if String.contains?(entry.client_type || "", "image") do %>
                            <.live_img_preview entry={entry} class="w-full h-20 object-cover rounded" />
